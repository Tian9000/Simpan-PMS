<% include ../../partials/header %>
<% include ../../partials/navbar %>
<% include ../../partials/sidebar %>

<div class="col-10">
  <div class="jumbotron mt-3">
    <div class="container">
      <h1 id="header" class="text-left pt-1"><b>Issues</b></h1><br>
      <h2><b>Filters</b></h2>
      <br>
      <form class="" action="/" method="GET">
        <div class="form-group row">
          <label for="inputID" class="col-sm-2 col-form-label">
            <input class="form-check-input" name="MyID" type="checkbox" id="invalidCheck2">ID
          </label>
          <div class="col-sm-6">
            <input type="ID" class="form-control" name="ID" id="ID" placeholder="ID">
          </div>
        </div>

        <div class="form-group row">
          <label for="inputSubject" class="col-sm-2 col-form-label">
            <input class="form-check-input" name="MySubject" type="checkbox" id="invalidCheck2">Subject
          </label>
          <div class="col-sm-6">
            <input type="string" class="form-control" name="Name" id="Name" placeholder="Name">
          </div>
        </div>

        <div class="form-group row">
          <label for="inputTracker" class="col-sm-2 col-form-label">
            <input class="form-check-input" name="MyTracker" type="checkbox" id="invalidCheck2">Tracker
          </label>
          <div class="col-sm-6">
            <select id="Member" class="form-control" name="Member">
              <option>Choose the Tracker ...</option>
              <option></option>
              <option></option>
            </select>
          </div>
        </div>
        <button class="btn btn-primary">Search</button>
      </form>

      <br>
      <!-- ============= option ================= -->
      <br><br><br>
      <h3 class="text-left pt-1"><b>Options</b></h3>
      <form class="" action="/projects/issuesoption" method="post">
        <fieldset class="form-group">
          <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Columns</legend>

            <div class="col-sm-2">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="oid" id="check1" value="true">
                <label class="form-check-label" for="check1">
                  ID
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="osubject" id="check2" value="true">
                <label class="form-check-label" for="check2">
                  Subject
                </label>
              </div>
              <div class="form-check disabled">
                <input class="form-check-input" type="checkbox" name="otracker" id="check3" value="true">
                <label class="form-check-label" for="check3">
                  Tracker
                </label>
              </div>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-primary">Apply</button>


        <br>
        </fieldset>
        <table class="table" id="mydatatable">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Subject</th>
              <th scope="col">Tracker</th>
              <th scope="col">Status</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((item)=>{%>
              <tr>
                <th scope="row"><%= item.issuesid %></th>
                <td><%= item.subject %></td>
                <td><%= item.tracker %></td>
                <td><%= item.status %></td>
          
              
              <td><a href="/projects/issues/id/edit/item.issuesid" class="btn btn-success">Edit</a>
                <a href="/projects/issues/delete" class="btn btn-danger"
                  onclick="return confirm('Are you sure you want to delete this item?');">Delete</a></td>
            </tr>
            <%})%>
          </tbody>
        </table>

        
        <a href="/projects/issues/<%= id %>/add" class="btn btn-primary">Add</a>
      </form>
    </div>
  </div>
</div>