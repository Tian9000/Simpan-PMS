<% include ../partials/header %>
<% include ../partials/navbar %>
<% include ../partials/footer %>

<title>Add PMS</title>
<div class="container" style=" margin-top: 20px ">
  <div class="jumbotron mt-5">
      <form class="" action="add" method="post">
    <h1>Add Data Project</h1>
      <div class="form-group row" style="margin-top: 20px">
        <label for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-6">
        <input type="text" class="form-control" name="projectname" id="Name" placeholder="Name">
      </div>
    </div>


      <div class="form-group">
        <div class="form-group row">
          <legend class="col-form-label col-sm-2 pt-0">Members</legend>
          <div class="col-sm-10">
            <% data.forEach((item)=>{ %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="members" id="member-<%= item.userid %>"
                value="<%= item.userid %>">
              <label class="form-check-label" for="member-<%= item.userid %>">
                <%= item.firstname + " " + item.lastname %>
              </label>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>